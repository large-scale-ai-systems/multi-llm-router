# Debug Environment Configuration for LLM Router
# Copy this to .env for local development debugging

# Enable debug mode
DEBUG=true
TESTING=false
PROFILING=false

# Logging configuration  
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# FastAPI configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# Vector Database debugging
VECTOR_DB_DEBUG=true
FAISS_VERBOSE=true

# Provider debugging
PROVIDER_DEBUG=true
AZURE_DEBUG=true
BEDROCK_DEBUG=true

# PID Controller debugging
PID_DEBUG=true
ROUTING_DEBUG=true

# Performance monitoring
ENABLE_METRICS=true
PROFILE_REQUESTS=false

# Development helpers
AUTO_INIT_ROUTER=true
BYPASS_AUTH=true
CORS_ENABLED=true